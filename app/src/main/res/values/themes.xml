<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MiniMusic" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="FilledButton" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">50dp</item>
        <item name="rippleColor">@color/grey</item>
    </style>

    <style name="FilledPlayButton" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">@color/transparent</item>
        <item name="android:foreground">@drawable/dashboard_play_button</item>
        <item name="cornerRadius">50dp</item>
        <item name="rippleColor">@color/white</item>
    </style>

    <style name="BlackBoldText20" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="GreyItalicText15" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textStyle">italic</item>

    </style>

    <style name="WhiteBoldText40" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">40dp</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="WhiteBoldText20" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>